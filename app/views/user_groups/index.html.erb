<h6>Class <%= link_to 'New Group', new_user_group_path, class: 'btn btn-primary' %></h6>
<hr/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3" class="text-align-right"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
        <td class="kelas-nama"><%= user_group.name %></td>
        <td class="kelas-deskripsi"><%= user_group.description %></td>
        <td>
            <ul class="horizontal-list">
                <li><%= link_to 'Show', user_group, class: 'btn btn-primary btn-sm' %></li>
                <li><%= link_to 'Edit', edit_user_group_path(user_group), class: 'btn btn-info btn-sm' %></li>
                <li><%= link_to 'Destroy', user_group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'%></li>
            </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>