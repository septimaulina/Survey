<%= simple_form_for(@user_group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', user_groups_path, class: 'btn btn-primary' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>