<h6 class="text-center">Please Login First</h6>
	<div class="col-md-6 col-md-offset-3">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :login, required: false, autofocus: true,label: 'Email or NISN', placeholder: 'email@domain.com' %>
		    <%= f.input :password, required: false, placeholder: 'Place of birth' %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>
		  <div class="form-actions">
		    <%= f.button :submit, "Log in", class: 'btn btn-info' %>
		  </div>
		<% end %>
	
</div>
<% render "users/shared/links" %>
