<h6><%= question_group.new_record? ? "New Survey" : "Edit Survey" %></h6>

<%= simple_form_for question_group do |f| %>
  <%- if question_group.errors.any? %>
    <ul>
      <%- question_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<div class="col-md-8">
  <div class="login-form">
    <div class="form-input">
      <%= f.input :name, label: 'Name', autofocus: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>