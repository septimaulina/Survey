<h6>Listing Participants <%= link_to 'New Participant', new_participant_path, class: 'btn btn-primary' %></h6>
<hr/>

<table>
  <thead>
    <tr>
      <th width="40">Name</th>
      <th width="20">Nisn</th>
      <th width="20">Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.nisn %></td>
        <td><%= participant.user_group.try(:name) %></td>
        <td width="30">
          <ul class="horizontal-list">
            <li><%= link_to 'Show', participant, class: 'btn btn-primary btn-sm'%></li>
            <li><%= link_to 'Edit', edit_participant_path(participant), class: 'btn btn-info btn-sm' %></li>
            <li><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>